@model HSDraft.Models.Maintenance.Maintenance

@{
    ViewBag.Title = "Index";
}
<br />
<h3>Admin actions: </h3>

<a href="@Url.Action("ResetContainer", "Maintenance")" class="btn btn-primary btn-lg">Reset draft container</a>

<a href="@Url.Action("ResetHistory", "Maintenance")" class="btn btn-primary btn-lg">Reset draft history</a>

<a href="@Url.Action("ResetUserbase", "Maintenance")" class="btn btn-primary btn-lg">Reset user database</a>

<h3>Completed drafts: </h3>

@foreach (var draft in Model.FinishedDrafts.Drafts)
{
    <div class="row">
        DraftId: <a href="" draftid="@draft.DraftId" class="draft-history-link">@draft.DraftId</a> (click to open/close history details)
        <div id="draft-info-id-@draft.DraftId" class="draft-history-picks" hidden>
            @foreach (var item in draft.Players)
            {
                <div class="col-md-2" style="float:left">
                    @{ Html.RenderPartial("_Picks", item); }
                </div>
            }
        </div>
    </div>
}

<h3>Registered users: </h3>
<div class="row">
    <div class="col-md-2"><strong>Username</strong></div>
    <div class="col-md-2"><strong>Password</strong></div>
</div>
@foreach (var user in Model.Users.Users)
{
    <div class="row">
        <div class="col-md-2">@user.Name</div>
        <div class="col-md-2">@user.Password</div>
    </div>
}

@section scripts {
    <script src="~/Scripts/Maintenance/maintenance.js"></script>
}
