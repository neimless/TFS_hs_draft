@model HSDraft.Models.Draft.Draft
@{
    ViewBag.Title = "Draft";
}

<h2>Draft</h2>

@Html.HiddenFor(x => x.Id)

<div class="row">
    <div class="col-md-2" style="border: 2px solid; border-radius: 15px;float:left;height:230px">
        <div id="draft-cardinfo-container" style="padding: 10px"></div>
    </div>
    <div id="draft-status-container" class="col-md-3"></div>    
    <div id="draft-timer-container" class="col-md-3">
        @*Time left to pick: 
        <div id="time-left-to-pick" style="font-size:20px; margin-left:30px">0</div>*@
    </div>    
</div>
<div class="row" style="margin-top:25px">
    <div id="draft-container" class="col-md-12" style="float:left"></div>
</div>
<div class="row" style="margin-top:25px">
    <div id="draft-picks-container" class="col-md-3" style="float:left"></div>
    <div id="draft-manacurve-container" class="col-md-5 col-md-offset-4" style="float:left"></div>
</div>

<div id="all-cardinfo-container">
    @foreach (var item in Model.AllCards)
    {
        <div id="cardid-@item.Id" hidden>
            @{ Html.RenderPartial("_CardInfo", item); }
        </div>
    }
</div>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Draft/draft.js"></script>
}
