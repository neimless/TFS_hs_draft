@model HearthstoneDraft.Models.Draft.DraftIndex

@{
    ViewBag.Title = "Draft";
}

<h2>Draft</h2>

@Html.HiddenFor(x => x.Playername)

<div class="row">
    <div id="draft-status-container" class="col-md-3"></div>
    <div class="col-md-2" style="border: 2px solid; border-radius: 15px;float:left;height:210px">
        <div id="draft-cardinfo-container" style="padding: 10px"></div>
    </div>
</div>
<div class="row" style="margin-top:25px">
    <div id="draft-container" class="col-md-12" style="float:left"></div>
</div>
<div class="row" style="margin-top:25px">
    <div id="draft-picks-container" class="col-md-4" style="float:left"></div>
    <div id="draft-manacurve-container" class="col-md-5" style="float:left"></div>
</div>

<div id="all-cardinfo-container">
    @foreach (var item in Model.Draft.AllCards)
    {
        <div id="cardid-@item.Id" hidden>
            @{ Html.RenderPartial("_CardInfo", item); }
        </div>
    }
</div>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Draft/draft.js"></script>
}
